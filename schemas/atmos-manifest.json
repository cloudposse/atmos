{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "https://json.schemastore.org/atmos-manifest.json",
  "title": "JSON Schema for Atmos stack manifest files. https://atmos.tools",
  "type": "object",
  "properties": {
    "components": {
      "$ref": "#/definitions/components"
    },
    "vars": {
      "$ref": "#/definitions/vars"
    },
    "command": {
      "type": "string",
      "description": "Command to execute"
    }
  },
  "additionalProperties": false,
  "required": [],
  "definitions": {
    "import": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "uniqueItems": true
          },
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "path": {
                "type": "string"
              },
              "skip_templates_processing": {
                "type": "boolean"
              },
              "ignore_missing_template_values": {
                "type": "boolean"
              },
              "context": {
                "type": "object",
                "additionalProperties": true
              }
            },
            "required": ["path"]
          }
        ]
      }
    },
    "components": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "terraform": {
          "$ref": "#/definitions/terraform"
        },
        "helmfile": {
          "$ref": "#/definitions/helmfile"
        }
      },
      "required": [],
      "title": "components"
    },
    "terraform": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
      },
      "required": [],
      "title": "terraform"
    },
    "helmfile": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
      },
      "required": [],
      "title": "helmfile"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["abstract", "real"]
        },
        "component": {
          "type": "string"
        },
        "inherits": {
          "type": "array",
          "items": {
            "type": "string",
            "uniqueItems": true
          }
        }
      },
      "required": [],
      "title": "metadata"
    },
    "settings": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "validation": {
          "$ref": "#/definitions/validation"
        }
      },
      "required": [],
      "title": "settings"
    },
    "validation": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
      },
      "required": [],
      "title": "validation"
    },
    "vars": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
      },
      "required": [],
      "title": "vars"
    }
  }
}
