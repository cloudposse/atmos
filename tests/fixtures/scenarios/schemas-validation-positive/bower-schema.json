{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "JSON schema for Bower configuration files",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of your package",
      "type": "string"
    },
    "version": {
      "description": "The semantic version number of your package",
      "type": "string"
    },
    "description": {
      "description": "Description of your package",
      "type": "string"
    },
    "main": {
      "description": "The main entry point(s) for your package",
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "authors": {
      "description": "List of package authors",
      "type": "array",
      "items": {
        "type": ["string", "object"]
      }
    },
    "license": {
      "description": "SPDX license identifier",
      "type": ["string", "array"]
    },
    "dependencies": {
      "description": "Dependencies that will be installed",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "devDependencies": {
      "description": "Dependencies only for development",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
